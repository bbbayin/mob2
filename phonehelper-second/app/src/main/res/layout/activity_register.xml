<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@mipmap/login_reg_bg"
        android:gravity="top|center_horizontal"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="64dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_title"
        android:layout_marginTop="-30dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_item_height"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:background="@mipmap/mobile_icon" />

            <EditText
                android:id="@+id/mobile_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_item_height"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/sms_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/sms_icon" />

            <EditText
                android:id="@+id/code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_toLeftOf="@+id/code"
                android:layout_toRightOf="@+id/sms_icon"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/send_code"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_btn_round_enable_bg"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_item_height"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/lock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/lock_icon" />

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_toLeftOf="@+id/eye_icon"
                android:layout_toRightOf="@+id/lock_icon"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/eye_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/eye_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_item_height"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/lock_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/lock_icon" />

            <EditText
                android:id="@+id/pwd_et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_toLeftOf="@+id/eye2_icon"
                android:layout_toRightOf="@+id/lock_icon2"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/eye2_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/eye_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/select_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/unselected_icon" />

            <TextView
                android:id="@+id/register_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="我已阅读"
                android:textColor="#A6A6A6"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/register"
            style="@style/common_big_button_style"
            android:text="注册账号" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="已有账号，去登录 >"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>